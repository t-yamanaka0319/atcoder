    "N,D = map(int,input().split())\n",
    "\n",
    "# 監視員は、2*D+1本みれる\n",
    "k = 2*D+1\n",
    "\n",
    "# 出力する\n",
    "print(N//k if N%k == 0 else (N//k)+1)"
