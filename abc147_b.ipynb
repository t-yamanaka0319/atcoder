    "# Sを受け取る\n",
    "S = input()\n",
    "\n",
    "count = 0\n",
    "# 両端から１文字ずつ見ていき、異なったらカウントする\n",
    "for i in range(len(S)//2):\n",
    "    # print(S[i], S[-1-i])\n",
    "    if S[i] != S[-1-i]:\n",
    "        count += 1\n",
    "\n",
    "# 出力する\n",
    "print(count)"
   ]
